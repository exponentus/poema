{
    "compilerOptions": {
        "baseUrl": "./src",
        "target": "es6",
        "module": "es2015",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "noEmit": true,
        "noEmitHelpers": true,
        "noImplicitAny": false,
        "strictNullChecks": false,
        "lib": [
            "dom",
            "es2016",
            "es2017"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "node"
        ],
        "paths": {
            "@nb/*": ["../@nb-src-tmp/*"]
        }
    },
    "exclude": [
        "node_modules",
        "src/**/*.spec.ts",
        "src/**/*.e2e.ts"
    ],
    "awesomeTypescriptLoaderOptions": {
        "forkChecker": true,
        "useWebpackText": true
    },
    "angularCompilerOptions": {
        "genDir": "./compiled",
        "preserveWhitespaces": false,
        "skipMetadataEmit": true
    },
    "outDir": "./compiled",
    "compileOnSave": false,
    "buildOnSave": false,
    "atom": {
        "rewriteTsconfig": false
    }
}
