{
    "compilerOptions": {
        "baseUrl": "./src",
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "noEmit": true,
        "noEmitHelpers": true,
        "noImplicitAny": false,
        "strictNullChecks": false,
        "lib": [
            "es2015",
            "dom"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "node"
        ]
    },
    "exclude": [
        "node_modules",
        "src/**/*.spec.ts",
        "src/**/*.e2e.ts"
    ],
    "awesomeTypescriptLoaderOptions": {
        "forkChecker": true,
        "useWebpackText": true
    },
    "angularCompilerOptions": {
        "genDir": "./compiled",
        "skipMetadataEmit": true
    },
    "outDir": "./compiled",
    "compileOnSave": false,
    "buildOnSave": false,
    "atom": {
        "rewriteTsconfig": false
    }
}
