{
  "name": "nb-ng",
  "version": "1.0.1",
  "author": "LOF",
  "license": "LOF",
  "description": "nb front-end",
  "scripts": {
    "clean:js": "rimraf ../assets/dist",
    "clean:aot": "rimraf compiled",
    "copy-config": "copyfiles -f ./node_modules/@nb/core/config/auto-configure.js ./",
    "build": "npm run clean:js && webpack --config config/webpack.config.js --mode development",
    "build:w": "npm run clean:js && webpack --config config/webpack.config.js --watch --mode development",
    "build:aot:p": "npm run clean:js && npm run clean:aot && webpack --config config/webpack.config.js --mode production --optimize-minimize",
    "lint": "tslint ./src/**/*.ts{,x}",
    "explorer": "source-map-explorer ../assets/dist/app.js ../assets/dist/app.js.map",
    "explorer:vendor": "source-map-explorer ../assets/dist/vendor.js ../assets/dist/vendor.js.map",
    "reinstall-nb-core": "npm rm @nb/core && npm i git+ssh://git@git.semantyca.com:22373/b2b/nb-ng.git --save && npm run postinstall",
    "reinstall-nb-core:build:aot:p": "npm rm @nb/core && npm i git+ssh://git@git.semantyca.com:22373/b2b/nb-ng.git --save && npm run postinstall && npm run build:aot:p",
    "postinstall": "npm run copy-config && node auto-configure.js"
  },
  "dependencies": {
    "@angular/animations": "6.1.2",
    "@angular/common": "6.1.2",
    "@angular/compiler": "6.1.2",
    "@angular/core": "6.1.2",
    "@angular/forms": "6.1.2",
    "@angular/http": "6.1.2",
    "@angular/platform-browser": "6.1.2",
    "@angular/platform-browser-dynamic": "6.1.2",
    "@angular/router": "6.1.2",
    "@nb/core": "git+ssh://git@git.semantyca.com:22373/b2b/nb-ng.git",
    "@ngx-translate/core": "10.0.2",
    "angular-calendar": "0.25.2",
    "chart.js": "2.7.2",
    "core-js": "2.5.7",
    "file-saver": "1.3.8",
    "marked": "0.4.0",
    "moment": "2.22.2",
    "pikaday-time": "1.6.1",
    "rxjs": "6.2.2",
    "turndown": "4.0.2",
    "uglifyjs-webpack-plugin": "1.2.7",
    "webpack-command": "0.4.1",
    "zone.js": "0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.7.3",
    "@angular/cli": "6.1.2",
    "@angular/compiler-cli": "6.1.2",
    "@ngtools/webpack": "6.1.2",
    "@types/core-js": "2.5.0",
    "@types/node": "10.5.7",
    "@types/uglify-js": "3.0.3",
    "circular-dependency-plugin": "^5.0.2",
    "codelyzer": "4.4.3",
    "compression-webpack-plugin": "1.1.11",
    "copyfiles": "^2.0.0",
    "css-loader": "1.0.0",
    "file-loader": "1.1.11",
    "fs-extra": "^7.0.0",
    "html-loader": "0.5.5",
    "mini-css-extract-plugin": "0.4.1",
    "ngc-webpack": "4.1.2",
    "raw-loader": "0.5.1",
    "rimraf": "2.6.2",
    "source-map-explorer": "1.5.0",
    "style-loader": "0.22.1",
    "to-string-loader": "^1.1.5",
    "tslint": "5.11.0",
    "typescript": "2.9.2",
    "webpack": "4.16.5"
  }
}
